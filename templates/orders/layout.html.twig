{% extends '../layout.html.twig' %}

{% block title %}Orders | Crypto Bot{% endblock %}

{% block content %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Orders</h1>
                </div>
            </div>
        </div>
    </section>

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-text-width"></i>
                                Pairs
                            </h3>
                        </div>
                        <div class="card-body">
                            <ul>
                                {% for pair in pairs %}
                                    <li><a href="/orders/{{ pair|url_encode }}">{{ pair }}</a></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>

                {% block page_content %}{% endblock %}
            </div>
        </div>
    </div>


{% endblock %}