{% extends './layout.html.twig' %}

{% block title %}{{ symbol }} | Trading View | Crypto Bot{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm">
                <div id="tradingview" style="width: 100%; height: 600px"></div>
            </div>
            <div class="col-sm">
                <div id="tradingview_2" style="width: 100%; height: 600px"></div>
            </div>
        </div>
    </div>
{% endblock %}


{% block javascript %}
    <script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>


    <script type="text/javascript">
    new TradingView.widget(
        {
            "autosize": true,
            "symbol": "{{ symbol }}",
            "interval": "15",
            "theme": "Light",
            "style": "1",
            "locale": "en",
            "toolbar_bg": "#f1f3f6",
            "enable_publishing": false,
            "allow_symbol_change": true,
            "container_id": "tradingview",
            "studies": [
                "BB@tv-basicstudies",
                "CCI@tv-basicstudies",
                "MACD@tv-basicstudies",
                "MAExp@tv-basicstudies",
                "RSI@tv-basicstudies",
                "StochasticRSI@tv-basicstudies"
            ],
        }
    );

    new TradingView.widget(
        {
            "autosize": true,
            "symbol": "{{ symbol }}",
            "interval": "60",
            "theme": "Light",
            "style": "1",
            "locale": "en",
            "toolbar_bg": "#f1f3f6",
            "enable_publishing": false,
            "allow_symbol_change": true,
            "container_id": "tradingview_2",
            "studies": [
                "BB@tv-basicstudies",
                "CCI@tv-basicstudies",
                "MACD@tv-basicstudies",
                "MAExp@tv-basicstudies",
                "RSI@tv-basicstudies",
                "StochasticRSI@tv-basicstudies"
            ],
        }
    );
</script>
{% endblock javascript %}